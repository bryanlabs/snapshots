        {
          "name": "Invalid Query Parameters",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/chains/{{chainId}}/snapshots?limit=invalid&offset=abc",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "chains", "{{chainId}}", "snapshots"],
              "query": [
                {
                  "key": "limit",
                  "value": "invalid"
                },
                {
                  "key": "offset",
