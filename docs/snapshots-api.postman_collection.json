          "name": "Invalid Chain ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/chains/invalid-chain-id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "chains", "invalid-chain-id"]
            }
          },
          "response": []
        },
        {
          "name": "Invalid Snapshot Filename",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"filename\": \"invalid-file.tar.gz\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/chains/{{chainId}}/download",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "chains", "{{chainId}}", "download"]
            }
          },
          "response": []
