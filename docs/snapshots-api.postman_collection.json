              "mode": "raw",
              "raw": "{\n    \"email\": \"user@example.com\",\n    \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/account/link-email",
              "host": ["{{baseUrl}}"],
              "path": ["api", "account", "link-email"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Admin Endpoints",
      "item": [
        {
          "name": "Admin Stats (Requires Admin)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/admin/stats",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "stats"]
            }
          },
          "response": []
        },
        {
          "name": "Download Analytics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/admin/downloads?startDate=2025-07-01&endDate=2025-07-30&groupBy=day",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "downloads"],
              "query": [
                {
                  "key": "startDate",
                  "value": "2025-07-01"
                },
                {
                  "key": "endDate",
                  "value": "2025-07-30"
                },
                {
                  "key": "groupBy",
