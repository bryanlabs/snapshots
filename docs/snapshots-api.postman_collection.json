          "name": "Get Avatar (Requires Auth)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/account/avatar",
              "host": ["{{baseUrl}}"],
              "path": ["api", "account", "avatar"]
            }
          },
          "response": []
